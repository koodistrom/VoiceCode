<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/info_text"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"/>

    <com.jaakkomantyla.voicecode.CodeEditText
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:textCursorDrawable="@null"
        android:padding="3mm"
        android:inputType="none"

        android:background="@color/colorBackground"
        android:textColor="@android:color/white"
        android:gravity="start"
        android:id="@+id/code_text"/>


    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4.0">

        <Button android:id="@+id/saveExternalStorage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:layout_weight="2"/>

        <Button android:id="@+id/getExternalStorage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="LOAD" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4.0">
        <ToggleButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textOff="voice controll off"
            android:textOn="voice controll on"
            android:layout_weight="2"
            android:textColor="@android:color/white"
            android:id="@+id/speak_button"
            android:background="@color/colorAccent"/>
        <ToggleButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textOff="keyboard off"
            android:textOn="keyboard on"
            android:layout_weight="2"
            android:textColor="@android:color/white"
            android:id="@+id/keyboard_button"
            android:background="@color/colorAccent"/>
    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>